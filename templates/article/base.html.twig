{% extends 'base.html.twig'%}

{% block title%}
    Liste des articles
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <div class="container">
                <div class="row">
                    {% for art in arts %}
                        <div class="col-md-3">
                            <div class="card bg-light mb-3">
                                <div style="padding: 5px">
                                    <p>
                                        <a href="{{ path('show_art', {'slug' : art.slug}) }}">
                                            {{ art.name }}
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <div class="col-md-2">

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">

        </div>
    </div>

{% endblock %}